export NMK_DIR=$HOME/.nmk
export ZDOTDIR=$NMK_DIR/zsh

export EDITOR=nvim
export GOPATH=$HOME/go
export NMK_DEVELOPMENT=true
export VIMINIT='source $NMK_DIR/vim/init.vim'

path=(
    $NMK_DIR/bin
    $HOME/.pyenv/bin
    $HOME/.rbenv/bin
    $GOPATH/bin
    $HOME/.opt/google-cloud-sdk/bin
    $HOME/Android/Sdk/platform-tools
    $HOME/.opt/bin
    $path
)
# start gnupg-agent
gpg-connect-agent /bye
# gpg-agent as ssh-agent
export SSH_AUTH_SOCK=$HOME/.gnupg/S.gpg-agent.ssh
# Note for kubuntu
#   comment out use-ssh-agent in /etc/X11/Xsession.options to disable
#   default ssh-agent

